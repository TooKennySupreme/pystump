{% extends "base.jinja2" %}

{% block body %}
  <div id="navigation">&nbsp;</div>
  <div id="content">
    {% if error %}
      <p class='error'>{{error}}
    {% endif %}
    <div id="login_box">
      <h1>Please Login to {{site_name}}</h1>
      <form name='login' id='login_form' method='POST'>

        <ul>
          <li>
            <label>Username: </label>
            <input type='text' name='username'
                   {% if username %}
                     value={{username}}
                   {% endif %}
                   />
          </li>
          <li><label>Password: </label><input type='password' name='password' /></li>
          <li><input type='submit' value='Log In' /></li>
        </ul>
      </form>
    </div>
  </div>
{% endblock %}
